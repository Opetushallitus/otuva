<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <include resource="org/springframework/boot/logging/logback/defaults.xml"/>
    <appender name="STDOUT-CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd'T'HH:mm:ss.SSSX} %X{fi.vm.sade.kayttooikeus.RequestIdFilter.requestId:--} %X{fi.vm.sade.kayttooikeus.RequestCallerFilter.callerHenkiloOid:--} %-5p {%X{user}} [%t] %-5p %c: %m%n</pattern>
        </encoder>
    </appender>

    <appender name="AUDIT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%msg%n</pattern>
        </encoder>
    </appender>

    <logger name="org.springframework.security.cas" level="DEBUG">
        <appender-ref ref="STDOUT-CONSOLE"/>
    </logger>
    <logger name="org.apereo" level="DEBUG">
        <appender-ref ref="STDOUT-CONSOLE"/>
    </logger>

    <root level="INFO">
        <appender-ref ref="STDOUT-CONSOLE"/>
    </root>
    <logger name="fi.vm.sade.kayttooikeus.config.AuditlogConfiguration" level="INFO" additivity="false">
        <appender-ref ref="AUDIT"/>
    </logger>
</configuration>

