<?xml version="1.0" encoding="UTF-8" ?>
<!-- Specify the refresh internal in seconds. -->
<Configuration monitorInterval="60">
    <Appenders>
        <Console name="console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d %p %X{requestId} [%c] - &lt;%m&gt;%n"/>
        </Console>
    </Appenders>
    <Loggers>
        <AsyncLogger name="org.apache.xml.security.signature" leve="debug" />
        <AsyncLogger name="org.pac4j" level="debug" />
        <AsyncLogger name="org.opensaml" level="debug"/>
        <AsyncLogger name="PROTOCOL_MESSAGE" level="debug" />
        <AsyncLogger name="org.apereo.cas" level="info" />
        <AsyncLogger name="fi.vm" level="debug" />
        <Root level="info">
            <AppenderRef ref="console"/>
        </Root>
    </Loggers>
</Configuration>
