<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

    <bean id="loginFailureInterceptor" class="fi.vm.sade.login.failure.ByIpAndUserInMemoryLoginFailureHandlerInterceptorAdapter"
          p:initialLoginDelayInMinutes="5"
          p:cleanLoginFailuresOlderThanInMinutes="1440"
          p:denyLoginAfterFailedLoginsCount="10"
          p:delayLoginAfterFailedLoginsCount="5"/>

    <bean id="loginFailureInterceptorJobDetail" class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean"
          p:targetObject-ref="loginFailureInterceptor"
          p:targetMethod="clean" />

    <bean id="periodicLoginFailureCleanerTrigger" class="org.springframework.scheduling.quartz.SimpleTriggerFactoryBean"
          p:jobDetail-ref="loginFailureInterceptorJobDetail"
          p:startDelay="0"
          p:repeatInterval="43200000" />
</beans>