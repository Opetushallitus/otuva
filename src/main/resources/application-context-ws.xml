<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:jaxws="http://cxf.apache.org/jaxws"
       xmlns:cxf="http://cxf.apache.org/core" xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="
	   http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
	   http://cxf.apache.org/jaxws http://cxf.apache.org/schemas/jaxws.xsd
	   http://cxf.apache.org/core http://cxf.apache.org/schemas/core.xsd
	   http://www.springframework.org/schema/context
	   http://www.springframework.org/schema/context/spring-context.xsd
	">

    <bean id="casInterceptor" class="fi.vm.sade.authentication.cas.CasApplicationAsAUserInterceptor">
        <property name="webCasUrl" value="${web.url.cas}"/>
        <property name="targetService" value="${cas.service.authentication-service}/j_spring_cas_security_check"/>
        <property name="appClientUsername" value="${serviceprovider.app.username.to.usermanagement}"/>
        <property name="appClientPassword" value="${serviceprovider.app.password.to.usermanagement}"/>
    </bean>

    <bean id="organisaatioCasInterceptor" class="fi.vm.sade.authentication.cas.CasApplicationAsAUserInterceptor">
        <property name="webCasUrl" value="${web.url.cas}"/>
        <property name="targetService" value="${cas.service.organisaatio-service}/j_spring_cas_security_check"/>
        <property name="appClientUsername" value="${serviceprovider.app.username.to.organisaatio}"/>
        <property name="appClientPassword" value="${serviceprovider.app.password.to.organisaatio}"/>
    </bean>

    <cxf:bus>
        <cxf:outInterceptors>
            <bean class="org.apache.cxf.interceptor.LoggingOutInterceptor" />
        </cxf:outInterceptors>
    </cxf:bus>

    <jaxws:client id="authenticationService"
        serviceClass="fi.vm.sade.authentication.service.AuthenticationService" 
        address="${authentication.webservice.url.backend}">
        <jaxws:outInterceptors>
            <ref bean="casInterceptor" />
        </jaxws:outInterceptors>
    </jaxws:client>

    <jaxws:client id="userManagementService"
        serviceClass="fi.vm.sade.authentication.service.UserManagementService"
        address="${userManagement.webservice.url.backend}">
        <jaxws:outInterceptors>
            <ref bean="casInterceptor" />
        </jaxws:outInterceptors>
    </jaxws:client>

    <jaxws:client id="serviceProviderService"
            serviceClass="fi.vm.sade.authentication.service.ServiceProviderService"
            address="${serviceProvider.webservice.url.backend}">
        <jaxws:outInterceptors>
            <ref bean="casInterceptor" />
        </jaxws:outInterceptors>
    </jaxws:client>

    <jaxws:client id="organisaatioService"
                  serviceClass="fi.vm.sade.organisaatio.api.model.OrganisaatioService"
                  address="${organisaatio.webservice.url.backend}">
        <jaxws:outInterceptors>
            <ref bean="organisaatioCasInterceptor" />
        </jaxws:outInterceptors>
    </jaxws:client>
</beans>
