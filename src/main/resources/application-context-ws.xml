<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:jaxws="http://cxf.apache.org/jaxws"
	xsi:schemaLocation="
	   http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
	   http://cxf.apache.org/jaxws http://cxf.apache.org/schemas/jaxws.xsd
	">

    <bean id="authInterceptor" class="org.apache.cxf.ws.security.wss4j.WSS4JOutInterceptor">
        <constructor-arg>
            <map>
                <entry key="action" value="UsernameToken Timestamp" />
                <entry key="user" value="${webservice.username}" />
                <entry key="passwordType" value="PasswordText" />
                <entry key="passwordCallbackRef">
                    <bean class="fi.vm.sade.saml.userdetails.PropertyBackedCallback">
                        <property name="password" value="${webservice.password}" />
                    </bean>
                </entry>
            </map>
        </constructor-arg>
    </bean>

    <jaxws:client id="authenticationService"
        serviceClass="fi.vm.sade.authentication.service.AuthenticationService" 
        address="${auth.webservice.url}">

        <!-- configure interceptor for WSS header -->
        <jaxws:outInterceptors>
            <!-- TODO: Palauta, kun autentikaatiopalvelu fiksattu
            <ref bean="authInterceptor" />-->
            <bean class="org.apache.cxf.interceptor.LoggingOutInterceptor" />
        </jaxws:outInterceptors>
    </jaxws:client>

    <jaxws:client id="userManagementService"
        serviceClass="fi.vm.sade.authentication.service.UserManagementService"
        address="${usermanagement.webservice.url}" >


        <!-- configure interceptor for WSS header -->
        <jaxws:outInterceptors>
            <ref bean="authInterceptor" />
            <bean class="org.apache.cxf.interceptor.LoggingOutInterceptor" />
        </jaxws:outInterceptors>
    </jaxws:client>

    <jaxws:client id="serviceProviderService"
            serviceClass="fi.vm.sade.authentication.service.ServiceProviderService"
            address="${serviceprovider.webservice.url}">
        <jaxws:outInterceptors>
            <ref bean="authInterceptor" />
            <bean class="org.apache.cxf.interceptor.LoggingOutInterceptor" />
        </jaxws:outInterceptors>
    </jaxws:client>

	<bean id="organisaatioService" class="fi.vm.sade.organisaatio.api.OrganisaatioServiceMock"/>

</beans>
