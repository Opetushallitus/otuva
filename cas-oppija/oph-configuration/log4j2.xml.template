<?xml version="1.0" encoding="UTF-8" ?>
<!-- Specify the refresh internal in seconds. -->
<Configuration monitorInterval="60">
    <Appenders>
        <RollingFile name="file" fileName="/root/logs/cas-oppija.log" append="true"
                     filePattern="cas-oppija-%d{yyyy-MM-dd-HH}-%i.log">
            <ThresholdFilter level="{{ env_loglevel }}" />
{# raw-endraw -välillä template engine ei tee mitään! #}
{% raw %}
            <PatternLayout pattern="%d{yyyy-MM-dd'T'HH:mm:ss.SSSX} %-5p {%X{user}} [%t] %-5p %c: %m%n"/>
{% endraw %}
            <Policies>
                <SizeBasedTriggeringPolicy size="10 MB"/>
            </Policies>
            <DefaultRolloverStrategy max="5" />
        </RollingFile>
    </Appenders>
    <Loggers>
        <AsyncLogger name="org.apereo.inspektr.audit.support" level="off" includeLocation="true" />
        <AsyncRoot level="INFO">
            <AppenderRef ref="file"/>
        </AsyncRoot>
    </Loggers>
</Configuration>
